<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.analytics.bonjourseller.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/txvWelcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:textSize="30sp"
            android:gravity="center_vertical|right" android:textColor="#ffffff"
            android:text="@string/str_welcome" />

        <TextView
            android:id="@+id/txvToBonjour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:textSize="30sp"
            android:gravity="center_vertical|left" android:textColor="#244d65"
            android:text="@string/str_to_bonjour" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_buyer_logo" />
</RelativeLayout>
