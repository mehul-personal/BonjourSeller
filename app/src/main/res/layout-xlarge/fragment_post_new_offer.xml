<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    tools:context="com.analytics.bonjourseller.CustomSearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#50000000"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="300dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_food_restaruent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imvMerchant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_merchant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imvRealEstate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_real_estate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="250dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/str_food_restaurent"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txvMerchant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/str_merchant"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txvRealEstate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/str_real_estate"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvFoodArrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_right_arrow" />

            <ImageView
                android:id="@+id/imvMerchantArrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:padding="10dp"
                android:scaleType="fitCenter"
                android:gravity="left|center_vertical"
                android:src="@drawable/ic_right_arrow" />

            <ImageView
                android:id="@+id/imvRealEstateArrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:padding="10dp"
                android:scaleType="fitCenter"
                android:gravity="left|center_vertical"
                android:src="@drawable/ic_right_arrow" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
